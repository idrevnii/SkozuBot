{
    "compilerOptions": {
      "target": "es6",                          
      "module": "commonjs",                    
      "lib": ["es6"],                     
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "./",
      "strict": true,         
      "noImplicitAny": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.json"]
  }